    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+quanforge",
      "url": "/handle-protocol?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import-robot",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".mq5", ".mqh"]
      }
    }
  ],
  "share_target": {
    "action": "/share-robot",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "robot",
          "accept": [".mq5", ".mqh", ".json"]
        }
      ]
    }
  }
