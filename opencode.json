{
  "version": "1.0.0",
  "project": {
    "name": "QuanForge",
    "description": "AI-powered MQL5 trading robot generator and backtesting platform",
    "type": "typescript-react",
    "framework": "vite"
  },
  "agents": {
    "default": {
      "model": "opencode/kimi-k2.5-free",
      "temperature": 0.7,
      "max_tokens": 8192
    },
    "specialized": {
      "security": {
        "model": "opencode/glm-4.7-free",
        "temperature": 0.3,
        "system_prompt": "You are a Principal Security Engineer. Focus on security audits, vulnerability assessments, and implementing security best practices. Always verify npm audit, check for secrets, and validate security headers."
      },
      "performance": {
        "model": "opencode/minimax-m2.1-free",
        "temperature": 0.4,
        "system_prompt": "You are a Performance Engineer. Focus on bundle optimization, build performance, and runtime optimizations. Always measure before and after changes."
      },
      "documentation": {
        "model": "opencode/kimi-k2.5-free",
        "temperature": 0.5,
        "system_prompt": "You are a Technical Writer. Focus on creating clear, actionable documentation. Follow progressive disclosure, keep docs accurate, and avoid walls of text."
      },
      "refactoring": {
        "model": "opencode/glm-4.7-free",
        "temperature": 0.3,
        "system_prompt": "You are a Code Architect. Focus on systematic refactoring, reducing technical debt, and improving code maintainability. Follow existing patterns and maintain backward compatibility."
      }
    }
  },
  "models": {
    "available": [
      "opencode/glm-4.7-free",
      "opencode/kimi-k2.5-free",
      "opencode/minimax-m2.1-free"
    ],
    "fallback_order": [
      "opencode/kimi-k2.5-free",
      "opencode/glm-4.7-free",
      "opencode/minimax-m2.1-free"
    ]
  },
  "skills": {
    "enabled": [
      "ultrawork",
      "refactoring",
      "security-audit",
      "performance-optimization",
      "documentation"
    ],
    "config": {
      "ultrawork": {
        "parallel_agents": true,
        "background_tasks": true,
        "deep_exploration": true,
        "relentless_execution": true
      }
    }
  },
  "mcp": {
    "enabled": [
      "websearch",
      "context7",
      "github_search"
    ]
  },
  "hooks": {
    "disabled": [],
    "custom": {
      "pre_tool_use": [],
      "post_tool_use": [],
      "user_prompt_submit": []
    }
  },
  "context": {
    "auto_inject": [
      "AGENTS.md",
      "README.md",
      "PROJECT_STATUS.md"
    ],
    "conditional_rules": {
      "security": {
        "patterns": ["security", "audit", "vulnerability", "secret"],
        "inject": ["SECURITY.md"]
      },
      "performance": {
        "patterns": ["performance", "optimize", "bundle", "build"],
        "inject": ["BUNDLE_ANALYSIS_REPORT.md"]
      }
    }
  },
  "commands": {
    "aliases": {
      "ulw": "ultrawork",
      "sec": "security-audit",
      "perf": "performance-optimization",
      "doc": "documentation"
    }
  },
  "build": {
    "verification_required": true,
    "commands": {
      "build": "npm run build",
      "typecheck": "npm run typecheck",
      "lint": "npm run lint",
      "test": "npm test"
    }
  }
}
