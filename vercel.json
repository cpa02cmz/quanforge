{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/home",
      "dest": "/"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
]
  },
  {
    "source": "/api/(.*)",
    "headers": [
      {
        "key": "Cache-Control",
        "value": "public, max-age=300, s-maxage=600"
      },
      {
        "key": "Edge-Control",
        "value": "cache-maxage=300"
      }
    ]
  }
  ],
  "regions": ["hkg1", "iad1", "sin1"],
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "functions": {
    "api/**/*.ts": {
      "runtime": "edge",
      "regions": ["hkg1", "iad1", "sin1"],
      "maxDuration": 10
    },
    "app/**/*.ts": {
      "runtime": "nodejs20.x",
      "memory": 512
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "EDGE_RUNTIME": "true",
      "ENABLE_EDGE_CACHING": "true",
      "VITE_ENABLE_EDGE_RUNTIME": "true",
      "VITE_ENABLE_SERVICE_WORKER": "true",
      "VITE_ENABLE_COMPRESSION": "true",
      "VITE_ENABLE_WEB_VITALS": "true",
      "VITE_ENABLE_PERFORMANCE_MONITORING": "true"
    }
  }
}