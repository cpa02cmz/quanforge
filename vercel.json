{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "regions": ["hkg1", "iad1", "sin1", "cle1", "fra1"],
  "routes": [
    {
      "src": "/home",
      "dest": "/"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "X-Edge-Cache",
          "value": "HIT"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, s-maxage=1800, stale-while-revalidate=60"
        },
        {
          "key": "Edge-Control",
          "value": "cache-maxage=300"
        },
        {
          "key": "X-Edge-API",
          "value": "optimized"
        },
        {
          "key": "Edge-Cache-Tag",
          "value": "api, dynamic"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.vercel-insights.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://*.supabase.co https://googleapis.com; frame-ancestors 'none';"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), payment=(), usb=()"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "edge",
      "regions": ["hkg1", "iad1", "sin1", "fra1", "sfo1"],
      "maxDuration": 30,
      "memory": 512
    },
    "app/**/*.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "EDGE_RUNTIME": "true",
      "ENABLE_EDGE_CACHING": "true",
      "EDGE_CACHE_TTL": "3600",
      "ENABLE_BROTLI": "true",
      "ENABLE_GZIP": "true",
      "VITE_ENABLE_EDGE_RUNTIME": "true",
      "VITE_ENABLE_SERVICE_WORKER": "true",
      "VITE_ENABLE_COMPRESSION": "true",
      "VITE_ENABLE_WEB_VITALS": "true",
      "VITE_ENABLE_PERFORMANCE_MONITORING": "true",
      "VITE_ENABLE_BUNDLE_ANALYZER": "false",
      "VITE_ENABLE_PRELOAD": "true",
      "VITE_ENABLE_PREFETCH": "true",
      "ENABLE_EDGE_METRICS": "true",
      "EDGE_METRICS_ENDPOINT": "/api/edge-metrics",
      "PERFORMANCE_SAMPLE_RATE": "0.1",
      "SUPABASE_CONNECTION_POOL_SIZE": "10",
      "SUPABASE_QUERY_TIMEOUT": "5000",
      "SUPABASE_CACHE_TTL": "300000",
      "CHUNK_SIZE_LIMIT": "250000",
      "ENABLE_CODE_SPLITTING": "true"
    }
  },
  "crons": [],
  "rewrites": [
    {
      "source": "/api/supabase/(.*)",
      "destination": "/api/supabase/$1"
    }
  ]
}