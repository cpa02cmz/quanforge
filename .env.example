# Environment Variables Template
# Copy this file to .env.local for local development

# Security Configuration
# Production encryption key for sensitive data (REQUIREMENT: Change in production!)
ENCRYPTION_KEY=your_super_secure_encryption_key_here_at_least_32_chars
# Frontend encryption key (if different from backend)
VITE_ENCRYPTION_KEY=your_super_secure_encryption_key_here_at_least_32_chars

# Security Endpoint Configuration
# Custom security endpoint (leave empty for default)
SECURITY_ENDPOINT=

# Rate Limiting Configuration
# Time window for rate limiting in milliseconds (60000ms = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
# Maximum requests per time window
RATE_LIMIT_MAX_REQUESTS=100

# Encryption Configuration
# Encryption algorithm to use (AES-256-GCM recommended)
ENCRYPTION_ALGORITHM=AES-256-GCM
# Key rotation interval in milliseconds (43200000ms = 12 hours)
KEY_ROTATION_INTERVAL=43200000

# Edge Rate Limiting
# Requests per second for edge rate limiting
EDGE_RATE_LIMIT_RPS=10
# Burst limit for edge rate limiting
EDGE_RATE_LIMIT_BURST=20

# AI Configuration
VITE_API_KEY=your_google_gemini_api_key_here

# OpenAI API Configuration
# Base URL for OpenAI API (useful for custom endpoints or proxies)
OPENAI_API_BASE_URL=https://api.openai.com/v1

# Supabase Configuration (Optional - will use LocalStorage if not provided)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Read Replica Configuration (Optional - for read scaling)
VITE_SUPABASE_READ_REPLICA_URL=your_supabase_read_replica_url
VITE_SUPABASE_READ_REPLICA_ANON_KEY=your_supabase_read_replica_anon_key

# Twelve Data API for real-time market data (Optional)
VITE_TWELVE_DATA_API_KEY=your_twelve_data_api_key

# Market Data Configuration (JSON format)
# Example: {"EURUSD":{"symbol":"EURUSD","basePrice":1.0850,"pipValue":0.0001},...}
# Default symbols are provided - customize as needed
VITE_MARKET_SYMBOLS_CONFIG={"EURUSD":{"symbol":"EURUSD","basePrice":1.0850,"pipValue":0.0001},"GBPUSD":{"symbol":"GBPUSD","basePrice":1.2750,"pipValue":0.0001},"USDJPY":{"symbol":"USDJPY","basePrice":157.50,"pipValue":0.01}}
MARKET_SYMBOLS_CONFIG={"EURUSD":{"symbol":"EURUSD","basePrice":1.0850,"pipValue":0.0001},"GBPUSD":{"symbol":"GBPUSD","basePrice":1.2750,"pipValue":0.0001}}

# Market Timeouts (milliseconds)
MARKET_CACHE_TTL=5000
MARKET_SUBSCRIPTION_TTL=86400000
MARKET_HEALTH_CHECK_INTERVAL=15000

# Market Limits
MARKET_MAX_SYMBOLS=50
MARKET_MAX_LIMIT=1000
MARKET_MIN_VARIATION=0.0001
MARKET_MAX_VARIATION=0.01

# WebSocket URLs for Market Data Providers
MARKET_BINANCE_WS_URL=wss://stream.binance.com:9443/ws
MARKET_TWELVEDATA_WS_URL=wss://ws.twelvedata.com/v1/quotes
MARKET_WS_RECONNECT_INTERVAL=5000
MARKET_WS_MAX_RECONNECT_ATTEMPTS=10

# Application Configuration
VITE_APP_NAME=QuantForge AI
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://quanforge.ai

# Production Optimizations
VITE_ENABLE_BUNDLE_ANALYZER=false
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_PRELOAD=true
VITE_ENABLE_PREFETCH=true

# Performance Monitoring
VITE_ENABLE_WEB_VITALS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Edge Configuration
VITE_EDGE_RUNTIME=false
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_EDGE_FUNCTIONS=true

# Legacy edge optimization configuration
# Note: Edge API routes were removed in Jan 2026. These variables are retained
# for reference and potential future edge runtime optimizations.
EDGE_CACHE_WARMUP_INTERVAL=300000
EDGE_SECURITY_THRESHOLD=0.1
EDGE_CONNECTION_WARMING=true
EDGE_REGION_AFFINITY=true
EDGE_CACHE_TTL=3600
EDGE_MAX_CONNECTIONS=3
EDGE_MIN_CONNECTIONS=1
EDGE_HEALTH_CHECK_INTERVAL=15000
EDGE_WARMUP_CONCURRENT=3
EDGE_METRICS_SAMPLE_RATE=0.05

# Vercel Specific
VERCEL_ENV=production
VERCEL_URL=quanforge.ai
VERCEL_REGION=global

# Supabase Optimization
SUPABASE_POOL_SIZE=4
SUPABASE_CONNECTION_TIMEOUT=800
SUPABASE_QUERY_TIMEOUT=3000
SUPABASE_CACHE_TTL=180000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ANALYTICS_ID=your_analytics_id

# Development/Production
NODE_ENV=development